{
  "name": "game-manager",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "edgeone:check": "node scripts/pre-deploy-check.js",
    "edgeone:build": "cross-env EDGEONE_BUILD=true node scripts/build-edgeone.js",
    "edgeone:deploy": "npm run edgeone:check && echo '✅ 预检查通过，请前往腾讯云控制台完成部署'",

    "huawei:build": "node scripts/build-huawei.js",
    "huawei:deploy": "hcloud ros create-stack --template-body file://template.yaml --stack-name game-manager-stack",
    "huawei:dev": "hcloud functiongraph invoke-function --function-name game-manager-api"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "lucide-react": "^0.525.0",
    "next": "15.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.2",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "archiver": "^5.3.1",
    "cross-env": "^7.0.3",
    "fs-extra": "^11.2.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
