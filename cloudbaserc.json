{
  "envId": "{{env.ENV_ID}}",
  "version": "2.0",
  "framework": {
    "name": "game-manager",
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-website",
        "inputs": {
          "buildCommand": "npm run build",
          "outputPath": "out",
          "cloudPath": "/",
          "envVariables": {
            "NEXT_PUBLIC_API_URL": "{{env.NEXT_PUBLIC_API_URL}}"
          }
        }
      },
      "server": {
        "use": "@cloudbase/framework-plugin-function",
        "inputs": {
          "functionRootPath": "./",
          "functions": [
            {
              "name": "api-data",
              "config": {
                "timeout": 10,
                "envVariables": {},
                "runtime": "Nodejs18.15",
                "memorySize": 256
              },
              "handler": "app/api/data/route.js",
              "runtime": "Nodejs18.15"
            },
            {
              "name": "api-users",
              "config": {
                "timeout": 10,
                "envVariables": {},
                "runtime": "Nodejs18.15",
                "memorySize": 256
              },
              "handler": "app/api/users/route.js",
              "runtime": "Nodejs18.15"
            }
          ]
        }
      }
    }
  }
} 